{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictFunctionTypes": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"strict": true,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017",
			"es7",
			"esnext"
		],
		"outDir": "lib",
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	],
	"include": [
		"src"
	]
}